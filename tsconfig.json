{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"jsx": "preserve",
		"lib": ["dom", "esnext"],
		"strict": true,
		"noEmit": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noUnusedLocals": false,
		"allowJs": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"baseUrl": ".",
		"paths": { "*": ["types/*"] },
		"typeRoots": ["types", "node_modules/@types"]
	},
	"exclude": ["node_modules", "public", ".cache"]
}
